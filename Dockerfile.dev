FROM golang:1.24-alpine

# Install build dependencies and development tools
RUN apk add --no-cache git ca-certificates tzdata wget

# Install development tools (pinned versions for better caching)
RUN go install github.com/air-verse/air@v1.56.0
RUN go install github.com/bufbuild/buf/cmd/buf@v1.56.0

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Generate protobuf code
RUN cd proto && buf generate

# Expose ports
EXPOSE 9090 8080

# Run with air for hot reloading
CMD ["air", "-c", ".air.toml"]
